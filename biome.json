{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true },
    "ignore": ["**/routeTree.gen.ts"]
  },
  "formatter": {
    "enabled": true,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "useEditorconfig": false,
    "ignore": ["**/routeTree.gen.ts"]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "jsxQuoteStyle": "double",
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "organizeImports": { "enabled": true, "ignore": ["**/routeTree.gen.ts"] },
  "overrides": [{ "include": ["*.cmd", "*.bat"], "formatter": { "lineEnding": "crlf" } }]
}
