{
  "name": "fresh-bun",
  "version": "0.1.0",
  "description": "Single-page web app project template curated for performance, developer experience, and type safety.",
  "author": "Chris Leveille",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "bun run lefthook.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "tsc": "tsc -p tsconfig.json",
    "dev": "bun --hot src/server/index.ts",
    "bundle": "bun build src/client/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "build": "bun build src/server/index.ts --compile --outfile=bin/main --minify --sourcemap --bytecode --target bun --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun run src/server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@evilmartians/lefthook": "^1.13.6",
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "elysia": "^1.4.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
