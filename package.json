{
  "name": "fresh-bun",
  "version": "0.1.0",
  "description": "Single-page web app project template curated for performance, developer experience, and type safety.",
  "author": "Chris Leveille",
  "license": "MIT No Attribution",
  "type": "module",
  "scripts": {
    "prepare": "bun lefthook.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "tsc": "tsc -p tsconfig.json",
    "concurrent": "concurrently --prefix \"[{name}]\" -c \"bgBlue.bold,bgGreen.bold\"",
    "dev": "bun concurrent --names \"server,client\" \"bun --hot src/server/index.ts\" \"bunx --bun vite\"",
    "build:client": "bunx --bun vite build && bun src/client/helpers/workbox.ts",
    "build:server": "bun build --compile --minify --sourcemap --bytecode --target bun --outfile bin/main src/server/index.ts",
    "build:app": "bun build:client && bun build:server",
    "build": "bun build:app",
    "start": "bun src/server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@evilmartians/lefthook": "^2.0.2",
    "@tanstack/react-router-devtools": "^1.135.0",
    "@tanstack/router-plugin": "^1.135.0",
    "@types/bun": "^1.3.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "workbox-build": "^7.3.0"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.4",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/static": "1.4.0",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-router": "^1.135.0",
    "elysia": "^1.4.15",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "zustand": "^5.0.8"
  }
}
