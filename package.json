{
  "name": "fullstack-bun",
  "description": "\"MERB\" stack monorepo project template written in TypeScript. Bun/Express/Mongo on the backend, React on the frontend, with Socket.IO bridging the gap.",
  "author": "Chris Leveille <cdleveille@gmail.com",
  "license": "MIT",
  "module": "./src/server/index.ts",
  "type": "module",
  "scripts": {
    "compose": "docker compose -f \"./.fullstack-bun-dev-container/docker-compose.yml\" up -d --build",
    "lint": "bunx eslint . && bunx prettier --check .",
    "fix": "bunx eslint --fix . && bunx prettier --write .",
    "build": "bun ./scripts/build.ts",
    "build:prod": "bun ./scripts/build.ts BUN_ENV=production && workbox injectManifest workbox-config.json",
    "dev": "bun --watch ./src/server/index.ts",
    "start": "bun ./src/server/index.ts"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "bun-types": "latest",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "workbox-cli": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.15",
    "bun-bundle": "^2.1.2",
    "chokidar": "^4.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "mongoose": "^8.7.2",
    "nocache": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0"
  }
}
