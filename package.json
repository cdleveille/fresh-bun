{
  "name": "fresh-bun",
  "version": "0.1.0",
  "description": "Single-page web app project template curated for performance, developer experience, and type safety.",
  "author": "Chris Leveille",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "bun run lefthook.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "tsc": "tsc -p tsconfig.json",
    "dev": "concurrently \"tsr watch\" \"bun run --hot src/server/index.ts\"",
    "build": "tsr generate && bun build src/server/index.ts --compile --root src/client --outfile=bin/main --minify --sourcemap --bytecode --target=bun",
    "start": "NODE_ENV=production bun run src/server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@evilmartians/lefthook": "^1.13.6",
    "@tanstack/router-cli": "^1.133.15",
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.4",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-router": "^1.133.15",
    "@tanstack/react-router-devtools": "^1.133.15",
    "elysia": "^1.4.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "zustand": "^5.0.8"
  }
}
